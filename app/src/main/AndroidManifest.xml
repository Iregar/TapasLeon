<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="reyes.ivan.examen.tapasleon"
    android:versionCode="1"
    android:targetSdkVersion="1.0"
    android:installLocation="preferExternal">

     //android:minSdkVersion="8"


      <uses-permission
          android:name="android.permission.WRITE_EXTERNAL_STORAGE">
      </uses-permission>

    <supports-screens
        android:normalScreens="true"
        android:largeScreens="false"
        android:xlargeScreens="false"
        android:smallScreens="true"
        android:resizeable="true">
        </supports-screens>

    <uses-feature
        android:name="android.hardware.touchscreen.multitouch" android:required="true">
    </uses-feature>

    <uses-feature
        android:name="android.hardware.camera2" android:required="true">
    </uses-feature>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="reyes.ivan.examen.tapasleon.MiActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"> //meto como quiero que se vea
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
